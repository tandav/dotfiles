#!/usr/bin/env python3
'''
random password
'''

import string
import secrets
import sys


if len(sys.argv) == 2:
    length = int(sys.argv[1])
else:
    length = 32

alphabet = string.ascii_letters + string.digits
alphabet = ''.join(set(alphabet) - set('O0Il')) # base58: remove all the easily mistakable characters like 0, O, l and I.

password = ''.join(
    secrets.choice(alphabet)
    for _ in range(length)
)

print(password)
