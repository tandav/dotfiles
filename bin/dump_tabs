#!/usr/bin/env python3

import macos
import datetime
from pathlib import Path


filename = Path.home() / f"Desktop/tabs-{str(datetime.datetime.now()).split('.')[0].replace(':', '-').replace(' ', '_')}.md"

with open(filename, 'w') as f:
    for window in macos.tabs():
        for title, url in window:
            print(f'- [{title}]({url})', file=f)
        print('\n' + '-' * 60 + '\n', file=f)
